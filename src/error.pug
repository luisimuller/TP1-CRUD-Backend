doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Error - LogiFlow
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        background: linear-gradient(135deg, #f9fbfc 0%, #e6f0ff 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
      }

      .error-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        padding: 60px 40px;
        text-align: center;
        max-width: 500px;
        width: 100%;
      }

      .error-icon {
        font-size: 5rem;
        margin-bottom: 20px;
      }

      .error-container h1 {
        color: #f44336;
        font-size: 2rem;
        margin-bottom: 20px;
      }

      .error-container p {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 30px;
        line-height: 1.6;
      }

      .button-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
      }

      .btn {
        padding: 12px 30px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
      }

      .btn-primary {
        background: linear-gradient(135deg, #004080 0%, #0066cc 100%);
        color: white;
      }

      .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 64, 128, 0.3);
      }

      .btn-secondary {
        background: #f5f5f5;
        color: #333;
      }

      .btn-secondary:hover {
        background: #e0e0e0;
      }

      .user-info {
        margin-top: 30px;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 10px;
        font-size: 0.9rem;
        color: #666;
      }

  body
    .error-container
      .error-icon ⛔
      h1 Acceso Denegado
      p= mensaje || 'No tiene permisos para acceder a esta sección'

      .button-group
        a.btn.btn-primary(href="/dashboard") Volver al Dashboard
        a.btn.btn-secondary(href="javascript:history.back()") Volver Atrás

      if usuario
        .user-info
          p 
            strong Usuario: 
            | #{usuario.nombre}
          p 
            strong Rol: 
            | #{usuario.rol}
